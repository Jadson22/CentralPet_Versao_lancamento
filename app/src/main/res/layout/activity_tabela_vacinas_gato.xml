<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="appcentralpet.com.newcentralpet.ListExpansivel.TabelaVacinasGato">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextColor="#ffffff"/>

    <ImageView
        android:id="@+id/image"
        android:layout_margin="16dp"
        android:layout_below="@id/toolbar"
        android:layout_width="400dp"
        android:layout_height="185dp"
        android:background="@drawable/tbg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryText"
        android:layout_below="@id/image"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="A partir de um ano o animal é vacinado anualmente com uma dose única de vacina Quadrupla e uma dose de vacina Anti-rabica."/>

</RelativeLayout>
