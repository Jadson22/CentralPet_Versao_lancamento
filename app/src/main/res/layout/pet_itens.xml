<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundoPrincipal">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/fotoperfil"
        android:id="@+id/imgPerfil"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome: "
        android:id="@+id/idn"
        android:textSize="14sp"
        android:textColor="@color/primaryText"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgPerfil"
        android:layout_toEndOf="@+id/imgPerfil"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textoName"
        android:text="Nome"
        android:textSize="14sp"
        android:textColor="@color/primaryText"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/idn"
        android:layout_toEndOf="@+id/idn"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"/>


    <TextView
        android:text="Raça: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idr"
        android:textSize="14sp"
        android:textColor="@color/primaryText"
        android:textAlignment="center"
        android:layout_below="@+id/textoName"
        android:layout_toRightOf="@+id/imgPerfil"
        android:layout_toEndOf="@+id/imgPerfil"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:text="Raça"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textoRaca"
        android:textSize="14sp"
        android:textColor="@color/primaryText"
        android:textAlignment="center"
        android:layout_below="@+id/textoName"
        android:layout_toRightOf="@+id/idr"
        android:layout_toEndOf="@+id/idr"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:text="Idade: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idi"
        android:textSize="14sp"
        android:textColor="@color/primaryText"
        android:textAlignment="center"
        android:layout_below="@+id/textoRaca"
        android:layout_toRightOf="@+id/imgPerfil"
        android:layout_toEndOf="@+id/imgPerfil"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:text="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textoIdade"
        android:textSize="14sp"
        android:textColor="@color/primaryText"
        android:textAlignment="center"
        android:layout_below="@+id/textoRaca"
        android:layout_toRightOf="@+id/idi"
        android:layout_toEndOf="@+id/idi"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp" />

    <TextView
        android:text="anos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idy"
        android:textSize="14sp"
        android:textColor="@color/primaryText"
        android:textAlignment="center"
        android:layout_below="@+id/textoRaca"
        android:layout_toRightOf="@+id/textoIdade"
        android:layout_toEndOf="@+id/textoIdade"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp" />

    <ImageView
        android:id="@+id/iconeSexo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/iconemasc"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/iconeTipo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/iconegato"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iconeSexo"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"/>

</RelativeLayout>