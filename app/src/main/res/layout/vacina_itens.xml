<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome: "
        android:id="@+id/idn"
        android:textSize="14sp"
        android:textColor="@color/primaryText"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setarNome"
        android:text="sampletextnome"
        android:textSize="14sp"
        android:textColor="@color/primaryText"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/idn"
        android:layout_toEndOf="@+id/idn"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:text="Vacina: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idr"
        android:textSize="14sp"
        android:textColor="@color/primaryText"
        android:textAlignment="center"
        android:layout_below="@+id/setarNome"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:text="sampletextvacina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setarVacina"
        android:textSize="14sp"
        android:textColor="@color/primaryText"
        android:textAlignment="center"
        android:layout_below="@+id/setarNome"
        android:layout_toRightOf="@+id/idr"
        android:layout_toEndOf="@+id/idr"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:text="Vacinar em: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idi"
        android:textSize="14sp"
        android:textColor="@color/primaryText"
        android:textAlignment="center"
        android:layout_below="@+id/setarVacina"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:text="sampletextdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pData"
        android:textSize="14sp"
        android:textColor="@color/primaryText"
        android:textAlignment="center"
        android:layout_below="@+id/setarVacina"
        android:layout_toRightOf="@+id/idi"
        android:layout_toEndOf="@+id/idi"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp" />

    <TextView
        android:text="Retorno em: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ret"
        android:textSize="14sp"
        android:textColor="@color/primaryText"
        android:textAlignment="center"
        android:layout_below="@+id/pData"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:text="sampletextretorno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sData"
        android:textSize="14sp"
        android:textColor="@color/primaryText"
        android:textAlignment="center"
        android:layout_below="@+id/pData"
        android:layout_toRightOf="@+id/ret"
        android:layout_toEndOf="@+id/ret"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp" />

</RelativeLayout>