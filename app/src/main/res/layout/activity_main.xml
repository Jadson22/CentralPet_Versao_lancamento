<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="appcentralpet.com.newcentralpet.MainActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/vacina_nova"/>

    <TextView
        android:id="@+id/reminderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:padding="16dp"
        android:textStyle="bold" />
    <ListView
        android:id="@+id/list"
        android:layout_below="@+id/reminderText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/semAgenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicione alarmes para diversas atividades como vacinas, banhos, passeios e outros."
            android:textAlignment="center"
            android:textSize="20sp">
        </TextView>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_action_add"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp" />

</RelativeLayout>