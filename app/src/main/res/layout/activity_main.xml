<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="appcentralpet.com.newcentralpet.MainActivity"
    android:background="@color/fundoPrincipal">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlprincipal">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/relative66"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/toolbar"
                    android:id="@+id/toolbarMain"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/fotoperfil"
                        android:layout_alignParentLeft="true"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nome:"
                        android:id="@+id/textView9"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/txt_cad"
                        android:layout_below="@id/imageView"
                        android:layout_gravity="bottom"
                        android:padding="8dp"/>
                    <EditText
                        android:id="@+id/editartName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textColor="@color/primaryText"
                        android:ems="10"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/imageView"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:id="@+id/radioSexo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="70dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Macho"
                            android:id="@+id/rbMacho"
                            android:textColor="@color/primaryText"
                            android:checked="true" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fêmea"
                            android:id="@+id/rbFemea"
                            android:textColor="@color/primaryText"/>

                    </RadioGroup>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Raça: "
                        android:id="@+id/textView10"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/txt_cad"
                        android:layout_below="@id/imageView"
                        android:layout_gravity="bottom"
                        android:padding="8dp"/>
                    <EditText
                        android:id="@+id/editarRaca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textColor="@color/primaryText"
                        android:ems="10"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/edtName"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:id="@+id/radioTipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="70dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cão"
                            android:id="@+id/rbCao"
                            android:textColor="@color/primaryText"
                            android:checked="true" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gato"
                            android:id="@+id/rbGato"
                            android:textColor="@color/primaryText" />

                    </RadioGroup>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Idade:"
                        android:id="@+id/textView11"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/txt_cad"
                        android:layout_below="@id/imageView"
                        android:layout_gravity="bottom"
                        android:padding="8dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textColor="@color/primaryText"
                        android:ems="10"
                        android:id="@+id/editarIdade"
                        android:layout_below="@+id/edtPrice"
                        android:layout_alignParentRight="true" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>
